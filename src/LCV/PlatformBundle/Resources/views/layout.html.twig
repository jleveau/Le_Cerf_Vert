
{% extends "::layout.html.twig" %}

{% block title %}
  Articles - {{ parent() }}
{% endblock %}



{% block body %}
	<div class="container">
	    <div id="header" class="page-header">
	      <h1>Les Articles</h1>
	     {% for flashMessage in app.session.flashbag.get("success") %}
	            <div class="alert alert-success">
	                {{ flashMessage }}
	            </div>
	     {% endfor %}
	    </div>
	
		    <div class="row">
		      <div id="menu" class="col-md-2">
		        <ul class="nav nav-pills nav-stacked">
		          <li><a href="{{ path('lcv_platform_add') }}">Ajouter un article</a></li>
		          <li><a href="{{ path('lcv_platform_index') }}">Catégories</a></li>
		          <li><a href="{{ path('lcv_platform_list_articles') }}">Tous</a></li>
		          
		        </ul>
		      </div>
		      <div id="content" class="col-md-8">
				  {% block lcvplatform_body %}
				  {% endblock %}
		      </div>
		      <div id="content" class="col-md-2">
				<h4>Derniers articles</h4>
		        {{ render(controller("LCVPlatformBundle:Article:menu", {'limit': 5})) }}
		      </div>
		    </div>
	
	        {# On affiche tous les messages flash dont le nom est « info » #}
	   <div>
		   {% for message in app.session.flashbag.get('info') %}
		     <p>{{ message }}</p>
		   {% endfor %}
	  </div>
	</div>
	  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
	  <hr>
	
 <!--  End Block Body -->
{% endblock %}