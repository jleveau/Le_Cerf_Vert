
{% extends "::layout.html.twig" %}

{% block title %}
  Playlists - {{ parent() }}
{% endblock %}



{% block body %}
	<div class="container">
	    <div id="header" class="page-header">
	      <h1>Les Playlists</h1>
	     {% for flashMessage in app.session.flashbag.get("success") %}
	            <div class="alert alert-success">
	                {{ flashMessage }}
	            </div>
	     {% endfor %}
	     {% for flashMessage in app.session.flashbag.get("danger") %}
	     
	     	    <div class="alert alert-danger">
	                {{ flashMessage }}
	            </div>
	      {% endfor %}
	    </div>
	
		    <div class="row">
		      <div id="menu" class="col-md-2">
		        <ul class="nav nav-pills nav-stacked">
		          <li><a href="{{ path('lcv_playlist_add') }}">Ajouter une playliste</a></li>
		          <li><a href="{{ path('lcv_playlist_index') }}">Catégories</a></li>
		          <li><a href="{{ path('lcv_playlist_list') }}">Toutes</a></li>
		        </ul>
		      </div>
		      <div id="content" class="col-md-8">
				  {% block lcvplaylist_body %}
				  {% endblock %}
		      </div>
		      <div id="content" class="col-md-2">
				<h4>Dernieres playlists</h4>
		        {{ render(controller("LCVPlaylistBundle:Playlist:menu", {'limit': 5})) }}
		      </div>
		    </div>
	
	</div>
	  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
	  <hr>
	
 <!--  End Block Body -->
{% endblock %}
